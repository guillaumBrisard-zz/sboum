<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">
          
	<context:load-time-weaver
			weaver-class="org.springframework.instrument.classloading.ReflectiveLoadTimeWeaver"
            aspectj-weaving="on"/>
    <context:spring-configured/>
                
    <context:annotation-config/> 
    		
	<bean id="firstBusiness"
		class="com.gb.sboum.business.FirstBusiness" />
		
	<bean id="loggableAspectHelper"
		class="com.gb.sboum.utils.log.LoggableAspectHelper" />
		
	<bean id="loggableAspect" class="com.gb.sboum.utils.log.LoggableAspect"
		factory-method="aspectOf"/>
		
	<bean id="loggableEndpointAspect" class="com.gb.sboum.service.aspect.LoggableEndpointAspect"
		factory-method="aspectOf"/>
			
</beans>